@model List<PetShop.Models.CartItem>
@{
    ViewBag.Title = "Checkout";
}


<div class="colorlib-loader"></div>

<div id="page">
    <div class="breadcrumbs">
        <div class="container">
            <div class="row">
                <div class="col">
                    <p class="bread"><span><a href="index.html">Home</a></span> / <span>Checkout</span></p>
                </div>
            </div>
        </div>
    </div>
    <div class="colorlib-product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <form method="POST" action="https://script.google.com/macros/s/AKfycbz8Jp3Wq7HmG2Aei6SxdfCslZyqQJ6fyBkRaCy2HfBshQsJHQbeUVTRCKPenM44T8Cs/exec" class="colorlib-form">
                        @Html.AntiForgeryToken()
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <h2>Billing Details</h2>
                        <div class="row">

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="lname">Date Order</label>
                                    <input name="Date" type="date" placeholder="Date" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="email">Email</label>
                                    <input name="Email" type="email" placeholder="Email" required>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="fname">Name</label>
                                    <input name="Name" type="text" placeholder="Name" required>
                                </div>
                            </div>

                            <div class="col-md-12">
                                <div class="form-group">
                                    <label for="fname">Adress</label>
                                    <input name="Adress" type="text" placeholder="Adress" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="stateprovince">Region</label>
                                    <input name="Region" type="text" placeholder="Region" required>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="form-group">
                                    <label for="Phone">Phone Number</label>
                                    <input name="Phone Number" type="tel" placeholder="Phone Number" required>
                                </div>
                            </div>
                        </div>
                        <button type="submit">Send</button>
                    </form>
                </div>


                <div class="col-lg-4">
                    <div class="row">
                        @if (Model.Count > 0)
                        {
                            int? total = 0;
                            int stt = 1;
                            <div class="col-md-12">
                                <div class="cart-detail">
                                    <h2>Cart Detail</h2>
                                    <ul>
                                        @foreach (var cartitem in Model)
                                        {
                                            int price = int.Parse(cartitem.product.Price);
                                            var thanhtien = cartitem.quantity * price;
                                            total += thanhtien;

                                            <div>
                                                <td>@(cartitem.quantity)</td>
                                                <td>@cartitem.product.Name</td>
                                                <td>$@(cartitem.product.Price)</td>
                                            </div>
                                        }
                                        <li><span>Order total</span> <span>$@(total)</span></li>
                                    </ul>
                                </div>
                            </div>
                        }

                        <div class="w-100"></div>

                        <div class="col-md-12">
                            <div class="cart-detail">
                                <h2>Payment Method</h2>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio"> Direct Bank Tranfer</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio"> Check Payment</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="radio">
                                            <label><input type="radio" name="optradio"> Paypal</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-group">
                                    <div class="col-md-12">
                                        <div class="checkbox">
                                            <label><input type="checkbox" value=""> I have read and accept the terms and conditions</label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12 text-center">
                            <p><a href="Order_Submitted" class="btn btn-primary">Place an order</a></p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
